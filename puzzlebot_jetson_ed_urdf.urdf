<?xml version="1.0" encoding="UTF-8"?>
<robot name="Puzzlebot_Jetson_Lidar_Ed">

    <!-- Base link -->
    <link name="base_link"/>

    <!-- Chassis Link -->
    <link name="chassis">
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="2.0"/>
            <inertia ixx="7.583333333e-06" ixy="0" ixz="0" iyy="7.583333333e-06" iyz="0" izz="1.25e-05"/>
        </inertial>
        <visual>
            <origin xyz="0 0 0" rpy="1.57079632679 0 1.57079632679"/>
            <geometry>
                <mesh filename="package://localisation/models/MCR2_1000_13_Chassis.stl"/>
            </geometry>
        </visual>
    </link>

    <!-- Chassis Joint -->
    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="0 0 0.05"/>
    </joint>

    <!-- Left Wheel Link -->
    <link name="wl_link">
        <visual>
            <origin xyz="0.0525 0.103 0.05" rpy = "1.57079632679 0 0"/>
            <geometry>
                <mesh filename="package://localisation/models/MCR2_1000_1_1_Wheel_Coupler_2.stl"/>
            </geometry>
        </visual>
    </link>

    <!-- Left Wheel Joint -->
    <joint name="left_wheel_joint" type="continuous">
        <parent link="chassis"/>
        <child link="wl_link"/>
        <origin xyz="0.0525 0.103 0.05"/>
        <axis xyz="0 0 1"/>
    </joint>

    <!-- Right Wheel Link -->
    <link name="wr_link">
        <visual>
            <origin xyz="0.0525 -0.103 0.05" rpy= "-1.57079632679 0 0"/>
            <geometry>
                <mesh filename="package://localisation/models/MCR2_1000_1_1_Wheel_Coupler_2.stl"/>
            </geometry>
        </visual>
    </link>

    <!-- Right Wheel Joint -->
    <joint name="right_wheel_joint" type="continuous">
        <parent link="chassis"/>
        <child link="wr_link"/>
        <origin xyz="0.0525 -0.103 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <!-- Camera Link -->
    <link name="camera_link">
        <visual>
            <origin xyz="0.043 0 0.0222" rpy="1.57079632679 0 1.57079632679"/>
            <geometry>
                <mesh filename="package://localisation/models/camera.stl"/>
            </geometry>
        </visual>
    </link>

    <!-- Camera Joint -->
    <joint name="camera_joint" type="fixed">
        <parent link="chassis"/>
        <child link="camera_link"/>
        <origin xyz="0.045 0 0.02"/>
    </joint>

</robot>

